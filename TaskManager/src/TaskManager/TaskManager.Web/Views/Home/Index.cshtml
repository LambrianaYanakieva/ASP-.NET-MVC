@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Task Manager</h1>

    @if (this.User.Identity.IsAuthenticated)
    {

       <p class="btn-txt">@Html.ActionLink("Go to tasks", "Index", "Tasks",null, new { @class="button" })</p>
      
    }
    else
    {
        <h2>Login into your account to see your tasks</h2>
    }
   
</div>

